<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/myVotedImagesCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        card_view:cardCornerRadius="@dimen/_2sdp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/votedImageLayout">
            <ImageView
                android:id="@+id/myVotedImage"
                android:src="@drawable/destatalk_logo"
                android:adjustViewBounds="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/userVoteLabel"
                android:layout_centerVertical="true"
                android:background="@drawable/favourite_enable"
                android:layout_marginLeft="@dimen/_92sdp"
                android:layout_gravity="center_horizontal"
                android:layout_below="@+id/myVotedImage"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>